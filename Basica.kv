<BasicaScreen>:
    name: 'Basica'
    MDScreen:
        padding: '8dp'
        MDTextButton:
            text: "Back"
            custom_color: "black"
            pos_hint:{"center_x": .95, "center_y": .98}
            on_release: app.wm.current = 'main'
        MDCard:
            size_hint:(.6,.4)
            pos_hint:{"center_x": .5, "center_y": .75}
            elevation: 5
            Image:

                source: 'assets\imgs\pexels-jayson-hinrichsen-17504552.jpg'
                size_hint: (1,1)
        MDTextField:
            hint_text: "Nombre"
            mode: "fill"
            pos_hint:{"center_x": .5, "center_y": .5}
        MDTextField:
            hint_text: "Codigo de estudiante"
            mode: "fill"
            pos_hint:{"center_x": .5, "center_y": .4}
        MDTextField:
            hint_text: "Numero de contacto"
            mode: "fill"
            pos_hint:{"center_x": .5, "center_y": .3}

            
